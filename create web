//docker hub에서 nginx 검색 후 pull해도 됨
docker pull nginx:latest
docker images //nginx가 설치되었는지 확인하기
docker run -it --name nginx_web -d -p 8000:80 ngninx:latest //-p옵션으로 80번 포트에 대한 액세스 허가받기
docker ps //컨테이너에 nginx 이미지가 들어가 있는 것 확인하기
docker inspect <컨테이너 이름> //ip 주소 확인할 수 있음

//localhost:8000라고 치면 서버가 구축된 모습을 볼 수 있다!//
